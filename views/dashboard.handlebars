{{!-- shows all blog posts by all users --}}
<h2>Dashboard</h2>

<section class="container">
    <h3>All Posts</h3>
    {{#if logged_in}}
    <section class="flex-row justify center">
        {{#each posts}}
            <h3>{{title}}</h3>
            <p>{{body}}</p>
        {{/each}}
    </section>
</section>
{{else}}
<p>You must be logged in to view all posts</p>
<a class = 'btn' href="/login">Log in</a>
{{/if}}